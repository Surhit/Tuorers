<% layout('layout/boilerplate')-%>

<div class="container col-md-6 pt-5">
    <h1 class="my-4">Register</h1>
    <form action="/register" method="POST">
        <div class="my-4">
            <label class="form-label" for="username">Username:</label>
            <input class="form-control" type="text" id="username" placeholder="Username" name="username" required>
        </div>
        <div class="my-4">
            <label class="form-label" for="email">Email:</label>
            <input class="form-control" type="email" id="email" placeholder="Email id" name="email" required>
        </div>
        <div class="my-4">
            <label class="form-label" for="password">Password:</label>
            <input class="form-control" type="password" id="password" placeholder="Password" name="password" required>
        </div>
        <button class="btn btn-success btn-lg mt-3" type="submit">Sign Up</button>
    </form>
</div>